    <form action="" class="wrapper mt-36">
      <label class="relative flex items-center justify-between w-full text-white rounded h-72 bg-primary">
        <input type="text" class="w-full h-full pl-20 pr-64 text-2xl bg-transparent border-0 rounded focus:outline-transparent focus:ring-2 focus:ring-primary-hover focus:ring-offset-4 focus:ring-offset-tertiary placeholder:text-white/50" placeholder="Type your question">
