<!DOCTYPE html>
<html>
  <head>
    <title>PointyAI</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    <%= favicon_link_tag asset_path('favicon.ico') %>
    <%= hotwire_livereload_tags if Rails.env.development? %>
  </head>

  <body class="scrollbar-default">
    <% if notice or alert %>
      <div class="fixed top-0 right-0 z-50 max-w-md p-16 m-24 transition-opacity duration-300 rounded bg-secondary text-primary ring-2 ring-primary" data-controller="toast">
        <p class="notice empty:hidden"><%= notice %></p>
        <p class="alert empty:hidden"><%= alert %></p>
      </div>
    <% end %>
    <%= yield %>
  </body>
</html>
